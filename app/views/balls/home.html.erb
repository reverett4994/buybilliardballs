        <%= link_to ball do %>
        <div tooltip="View The <%=ball.title%>">
          <%= image_tag ball.image.url,class:'trangle_pic' %>
        </div>
        <%end%>
      <%end%>
    </div>
    <div id='bottom5'>
      <%@bottom5.each do |ball|%>
        <%= link_to ball do %>
        <div tooltip="View The <%=ball.title%>">
          <%= image_tag ball.image.url,class:'trangle_pic' %>
        </div>
        <%end%>
      <%end%>
    </div>
  </div>
  <h1> <%= link_to 'View All',balls_path%></h1>

</div>

