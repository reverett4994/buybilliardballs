<div id="contact_wrapper">
  <h1>Send Us a Message and We'll Get Back To You Soon!</h1>
<%= form_tag(mail_path,method:"get") do %>
    <%=email_field_tag 'email',nil,placeholder:'Your Email'%>
    <%=text_field_tag 'subject',nil,placeholder:'Subject'%>
    <%=text_area_tag 'message',nil,placeholder:'Your Message'%>
    <%= button_tag(type:"submit",class:'button') do %>
      <span>Send Message</span>
    <%end%>
  <%end%>
  <h2>Thanks For the Input!</h2>

</div>
